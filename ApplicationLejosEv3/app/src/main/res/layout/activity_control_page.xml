<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avancer"
        android:id="@+id/buttonF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reculer"
        android:id="@+id/buttonB"
        android:layout_below="@+id/buttonR"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gauche"
        android:id="@+id/buttonL"
        android:layout_below="@+id/buttonF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/droite"
        android:id="@+id/buttonR"
        android:layout_below="@+id/buttonF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accelerer"
        android:id="@+id/buttonFast"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ralentir"
        android:id="@+id/buttonSlow"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonR"
        android:layout_alignEnd="@+id/buttonR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/buttonExit"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonR"
        android:layout_alignEnd="@+id/buttonR" />
</RelativeLayout>